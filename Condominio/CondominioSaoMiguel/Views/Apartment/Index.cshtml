@using CondominioSaoMiguel.Util
@{
    ViewBag.Title = "Condomínio São Miguel";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="block-grey span6" align="center" style="text-align: left; padding: 40px;">
            <div class="media">
                <img src="@Util.HtmlHelper.GetImageSourceFromFilePath(Server.MapPath("~/Content/img/shivaint.jpg"))" class="img-polaroid" />
                <div class="media-body">
                    <h4 class="media-heading">
                        Apartamento - 1 Quarto</h4>
                    <div class="media">
                        <ul class="apartment-description">
                            <li>1 Quarto </li>
                            <li>1 Banheiro </li>
                            <li>1 Sala conjugada com cozinha e área de serviço </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-grey span6" align="center" style="text-align: left; padding: 40px;">
            <div class="block-light">
                <img src="@Util.HtmlHelper.GetImageSourceFromFilePath(Server.MapPath("~/Content/img/johor.jpg"))" class="img-polaroid" />
                <div class="wrapper">
                    <h2>
                        <a href="#">Apartamento - 2 Quartos</a></h2>
                    <p>
                        <ul class="apartment-description">
                            <li>2 Quartos </li>
                            <li>1 Banheiro </li>
                            <li>1 Sala </li>
                            <li>1 Cozinha </li>
                            <li>1 Área de Serviço </li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
