@using WebControllers
@model Model.ExameDadosModel
@{
    String method = "Search";
}
@using (Html.BeginForm(method, "ExameDados", FormMethod.Post, new { id = "searchFormId" }))
{
    <div class="control-group">
        <label class="control-label">
            @Html.LabelFor(model => model.TipoExame)</label>
        <div class="controls">
            @Html.EditorFor(model => model.TipoExame.Nome)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            @Html.LabelFor(model => model.Paciente)</label>
        <div class="controls">
            @Html.EditorFor(model => model.Paciente.Nome)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            @Html.LabelFor(model => model.DataExame)</label>
        <div class="controls">
            @Html.EditorFor(model=>model.DataExame)
        </div>
    </div>

}
