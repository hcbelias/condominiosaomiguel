@model List<Model.ConsultaModel>
@{
    ViewBag.Title = "Histórico de Consultas";
}
<h1>
    Histórico de Consultas</h1>
<div class="row-fluid">
    <h2>
        Consultas Passadas</h2>
    @if (Model != null)
    {
        <table class="table table-bordered  table-hover table-striped table-condensed">
            <thead>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.DATACONSULTA)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.NOMEMEDICO)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Internationalization.Agendada)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Internationalization.Realizada)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.RETORNO)
                </th>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(model=>model.DataConsulta < DateTime.Now).OrderByDescending(model=>model.DataConsulta).Take(5))
                {
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DataConsulta)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Medico.Nome)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Agendada)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Realizada)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Retorno)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Atenção!</strong> Você não possui nenhuma consulta anterior.
        </div>
    }
</div>
<div class="row-fluid">
    <h2>
        
        Próximas Consultas Agendadas</h2>
    @if (Model != null)
    {
        <table class="table table-bordered  table-hover table-striped table-condensed">
            <thead>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.DATACONSULTA)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.NOMEMEDICO)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Internationalization.Agendada)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Internationalization.Realizada)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.RETORNO)
                </th>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(model => model.DataConsulta >= DateTime.Now).OrderBy(model => model.DataConsulta).Take(5))
                {
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DataConsulta)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Medico.Nome)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Agendada)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Realizada)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Retorno)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Atenção!</strong> Você não possui nenhuma consulta agendada.
        </div>
    }
</div>
