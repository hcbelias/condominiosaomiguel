@using Model
@model List<CirurgiaModel>
@{
    ViewBag.Title = "Histórico de Cirurgias";
}
<h1>
    Histórico de Cirurgias</h1>
<div class="row-fluid">
    <h2>
        Cirurgias Passadas</h2>
    @if (Model != null)
    {
        <table class="table table-bordered  table-hover table-striped table-condensed">
            <thead>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.DATACIRURGIA)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.NOMEMEDICO)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Internationalization.Nome)
                </th>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(model => model.DataCirurgia < DateTime.Now).OrderByDescending(model => model.DataCirurgia).Take(5))
                {
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DataCirurgia)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Medico.Nome)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Atenção!</strong> Você não possui nenhuma cirurgia anterior.
        </div>
    }
</div>
<div class="row-fluid">
    <h2>
        Próximas Cirurgias Agendadas</h2>
    @if (Model != null)
    {
        <table class="table table-bordered  table-hover table-striped table-condensed">
            <thead>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.DATACIRURGIA)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Constants.Translate.NOMEMEDICO)
                </th>
                <th style="text-align: center;">@Html.Label(Util.Internationalization.Nome)
                </th>
            </thead>
            <tbody>
                @foreach (var item in Model.Where(model => model.DataCirurgia >= DateTime.Now).OrderBy(model => model.DataCirurgia).Take(5))
                {
                    
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DataCirurgia)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Medico.Nome)
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Atenção!</strong> Você não possui nenhuma cirurgia agendada.
        </div>
    }
</div>
