@using WebControllers
@model Model.SubMenuModel
@{
	String method = "Search";
}

@using (Html.BeginForm(method, "SubMenu", FormMethod.Post, new { id = "searchFormId" }))
{
 

			<div class="control-group ">
				<label class="control-label" >
					@Html.LabelFor(model=>model.Nome)</label>
				<div class="controls">

				    @Html.EditorFor(model => model.Nome)
					@Html.ValidationMessageFor(model=>model.Nome)
				</div>
			</div>

			<div class="control-group ">
				<label class="control-label" >
					@Html.LabelFor(model=>model.Link)</label>
				<div class="controls">

				    @Html.EditorFor(model => model.Link)
					@Html.ValidationMessageFor(model=>model.Link)
				</div>
			</div>

			<div class="control-group ">
				<label class="control-label" >
					@Html.LabelFor(model=>model.ClassName)</label>
				<div class="controls">

				    @Html.EditorFor(model => model.ClassName)
					@Html.ValidationMessageFor(model=>model.ClassName)
				</div>
			</div>

}

