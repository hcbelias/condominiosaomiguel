@using Util
@model IEnumerable<Model.PerfilModel>
<table id="table-list" class="table table-bordered  table-hover table-striped table-condensed">
    <thead>
        <th style="width: 8%; text-align:center;">@Html.Label(Constants.Translate.ACOES)
        </th>
	<th style="text-align:center;">@Html.Label(Internationalization.Id)</th>
	<th style="text-align:center;">@Html.Label(Internationalization.Name)</th>
	</thead>
	@if(Model!=null)
	{
		<tbody>
		@foreach (var item in Model)
		{
			<tr>
			<td style="width: 8%;text-align:center;">
				@Html.Partial("PerfilAction",item);
            </td>
				
				
					<td style="text-align:center;">@Html.DisplayFor(modelItem => item.Name)</td>

				
			</tr>

		}
		</tbody>
	}
</table>





















   