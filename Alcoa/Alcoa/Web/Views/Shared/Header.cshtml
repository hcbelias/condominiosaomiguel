@using Model
@using Web.UtilWeb
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar">
                </span>
            </button>
            <a class="brand pull-left" href="#">Salute</a>
            @if (this.Context.User.Identity.IsAuthenticated)
            {
                <div class="nav-collapse collapse">
                    @if (UserManager.User != null && UserManager.User.Email != null && HttpContext.Current.Session["Menu_" + UserManager.User.Email] != null)
                    {
                        @Html.Partial("Menu", HttpContext.Current.Session["Menu_" + UserManager.User.Email])
                    }
                    else
                    {
                        @Html.Partial("Menu", WebControllers.PerfilController.ObterMenuModel())
                    }
                </div>
            }
        </div>
    </div>
</div>
