@using WebControllers
@model Model.PacienteModel
@{
    ViewBag.Title = "Dados Paciente";
    
}
<div class="container">
    <div class="row">
        <div id="sidenav" class="span3">
            <ul class="nav nav-list bs-docs-sidenav affix">
                <li><a href="#dados-pessoais"><i class="icon-chevron-right"></i>Dados Pessoais</a></li>
                <li><a href="#consultas"><i class="icon-chevron-right"></i>Consultas</a></li>
                <li><a href="#cirurgias"><i class="icon-chevron-right"></i>Cirurgias</a></li>
            </ul>
        </div>
        <div class="span9" id="data-content">
            <div id="dados-pessoais">
                <div class="page-header">
                    <h1>
                        Dados Pessoais</h1>
                </div>
                <div class="row-fluid form-horizontal">
                    <div class="span6">
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.Nome)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Nome)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.DataNascimento)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.DataNascimento)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.Endereco)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Endereco)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.Telefone)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Telefone)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.Celular)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Celular)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.Cidade)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Cidade.Nome)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                @Html.LabelFor(model => model.Login.Email)</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.Login.Email, new { @class = "email" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="consultas">
                <div class="page-header">
                    <h1>
                        Consultas</h1>
                </div>
                <div class="row-fluid">
                    <div class="span6">
                        <legend>Últimas Consultas Realizadas</legend>
                        @Html.Partial("ConsultaTableList", Model.Consulta.OrderByDescending(model => model.DataConsulta).Take(5))
                    </div>
                    <div class="span6">
                        <legend>Próximas Consultas Agendadas</legend>
                        @Html.Partial("AgendamentoConsultaTableList", Model.AgendamentoConsulta.OrderBy(model => model.DataConsulta).Take(5))
                    </div>
                </div>
            </div>
            <div id="cirurgias">
                <div class="page-header">
                    <h1>
                        Cirurgias</h1>
                </div>
                <div class="row-fluid">
                    <div class="span6">
                        <legend>Últimas Cirurgias Realizadas</legend>
                        @Html.Partial("CirurgiaTableList", Model.Cirurgia.Where(model=>model.DataAlta.HasValue).OrderByDescending(model => model.DataCirurgia).Take(5))
                    </div>
                    <div class="span6">
                        <legend>Próximas Cirurgias Agendadas</legend>
                        @Html.Partial("CirurgiaTableList", Model.Cirurgia.Where(model => !model.DataAlta.HasValue).OrderByDescending(model => model.DataCirurgia).Take(5))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Footer
{
    @Html.Partial("FooterContainer")
}
