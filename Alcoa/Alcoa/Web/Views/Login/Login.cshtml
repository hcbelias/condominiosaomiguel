@using WebControllers
@using Web.UtilWeb
@model Web.UtilWeb.Logon
@{     
    this.Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("Login", "Login", new { p_ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { id = "loginFormId", @class = "form-signin form-horizontal" }))
    {        
        <h2 class="form-signin-heading">
            Clínica Salute</h2>
        @Html.ValidationSummary(true)
        <div class="control-group">
            <label class="control-label" style="width: auto;">
                @Html.LabelFor(model => model.Email)
            </label>
            <div class="controls" style="margin-left: 60px;">
                @Html.EditorFor(model => model.Email, new { @class = "input-block-level" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" style="width: auto;">
                @Html.LabelFor(model => model.Password)
            </label>
            <div class="controls"style="margin-left: 60px;">
                @Html.EditorFor(model => model.Password, new { @class = "input-block-level password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>             
        
        <button type="submit" class="btn btn-success btn-large btn-primary "style="margin-left: 200px;">
            Entrar</button>
    }
</div>
