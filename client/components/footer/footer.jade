
#contact.flow-text.z-depth-2
  form.container
    h3 Contato
    .input-field.col.s12
      i.material-icons.prefix perm_identity
      input#input_name(type='text', length='10', ng-model='name', required='true')
      label(for='input_name') Nome
    .input-field.col.s12
      i.material-icons.prefix email         
      input#input_email(type='email', length='25', ng-model='email', required='true').validate
      label(for='input_email') Email        
    .input-field.col.s12
      i.material-icons.prefix phone          
      input#input_phone(type='text', length='25', ng-model='phone', required='true').validate
      label(for='input_phone') Telefone            
    .input-field.col.s12
      i.material-icons.prefix message
      textarea#textarea_message.materialize-textarea(length='270', required='true').validate
      label(for='textarea_message') Mensagem            
    button(type='submit').waves-effect.waves-light.btn Enviar
      i.material-icons.right send



          

