@using CondominioSaoMiguel.Util
@model CondominioSaoMiguel.Models.ModalModel
<script type="text/javascript">
    $(document).ready(function () {
        $('#@Model.Id').modal({
            backdrop: '@Model.Backdrop',
            keyboard: '@Model.Keyboard',
            show: '@Model.Show'
        })
    });
</script>
<div class="modal" id="@Model.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">@Model.Header</h3>
  </div>
  <div class="modal-body">
    <p>@Model.Body</p>
  </div>
  <div class="modal-footer">
    @Model.Footer
  </div>
</div>