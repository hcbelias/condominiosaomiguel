<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"></meta>
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700' rel='stylesheet'
        type='text/css'>
    <link href="../../Content/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/bootstrap/css/bootstrap-responsive.css" rel="stylesheet"
        type="text/css" />
    <link href="../../Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header">
        @Html.Partial("_Header")
    </div>
    <div class="body">
        <div class="container">
            <ul id="menu" class="pull-right">
                <li class="span2"><a class="menu-button" id="Home">Home</a> </li>
                <li class="span2"><a class="menu-button" id="About">Móveis</a></li>
                <li class="span2"><a class="menu-button" id="Contact">Contato</a></li>
            </ul>
            <div class="row-fluid">
                <div class="span12" id='body-content'>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="../../Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script src="../../Content/bootstrap/js/bootstrap.js" type="text/javascript"></script>
    <script src="../../Content/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Site.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var buttonMenu = $('#menu li a');
            buttonMenu.each(function () {
                var id = $(this).attr('id');
                $(this).click(function () {
                    debugger;
                    replaceOnComplete(id + "/IndexPartialView", null, '#body-content');
                });
            });
        });
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-36484766-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

	    
    </script>
</body>
</html>
